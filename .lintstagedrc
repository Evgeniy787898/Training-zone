{
  "backend/**/*.{ts,tsx}": [
    "prettier --write",
    "npm run lint --workspace=tzona-v2-backend --",
    "npm run typecheck --workspace=tzona-v2-backend --"
  ],
  "frontend/**/*.{ts,tsx,vue}": [
    "prettier --write",
    "npm run lint --workspace=tzona-v2-frontend --",
    "npm run type-check --workspace=tzona-v2-frontend --"
  ],
  "*.{json,md,yaml,yml}": [
    "prettier --write"
  ]
}

